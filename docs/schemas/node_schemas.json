{
  "$schema": "https://zxmengde.github.io/obsidian-cognitive-razor/node_schemas.schema.json",
  "version": "1.0.0",
  "updatedAt": "2025-12-03",
  "types": {
    "Domain": {
      "required": [
        "definition",
        "teleology",
        "methodology",
        "historical_genesis",
        "boundaries",
        "issues",
        "holistic_understanding"
      ],
      "optional": ["sub_domains"],
      "description": "Defines the epistemic boundary of a field.",
      "fields": {
        "definition": {"type": "string", "description": "What objects does the domain investigate?"},
        "teleology": {"type": "string", "description": "Why does the domain exist and what questions does it pursue?"},
        "methodology": {"type": "string", "description": "How does the domain validate and produce knowledge?"},
        "historical_genesis": {"type": "string", "description": "When and how was the domain formed?"},
        "boundaries": {"type": "string", "description": "What topics are explicitly excluded from the domain?"},
        "issues": {"type": "array", "items": {"type": "string"}, "description": "List of emergent issues owned by this domain."},
        "holistic_understanding": {"type": "string", "description": "Synthesis paragraph explaining how to understand the domain."},
        "sub_domains": {"type": "array", "items": {"type": "object", "required": ["name", "dimension"], "properties": {"name": {"type": "string"}, "dimension": {"type": "string"}, "notes": {"type": "string"}}}}
      }
    },
    "Issue": {
      "required": [
        "core_tension",
        "significance",
        "historical_genesis",
        "structural_analysis",
        "stakeholder_perspectives",
        "boundary_conditions",
        "holistic_understanding",
        "theories"
      ],
      "optional": [],
      "description": "Describes an unresolved tension inside a domain.",
      "fields": {
        "core_tension": {"type": "string", "description": "Expressed as 'X vs Y'."},
        "significance": {"type": "string", "description": "Why is the issue important?"},
        "historical_genesis": {"type": "string", "description": "Origin story of the issue."},
        "structural_analysis": {"type": "string", "description": "Decomposition into sub-problems."},
        "stakeholder_perspectives": {"type": "array", "items": {"type": "object", "required": ["stakeholder", "view"], "properties": {"stakeholder": {"type": "string"}, "view": {"type": "string"}}}},
        "boundary_conditions": {"type": "string", "description": "When does the issue stop being relevant?"},
        "holistic_understanding": {"type": "string"},
        "theories": {"type": "array", "items": {"type": "object", "required": ["name", "classification"], "properties": {"name": {"type": "string"}, "classification": {"enum": ["mainstream", "edge", "falsified"]}, "notes": {"type": "string"}}}}
      }
    },
    "Theory": {
      "required": [
        "axioms",
        "argument_chain",
        "core_predictions",
        "scope_and_applicability",
        "limitations",
        "historical_development",
        "extracted_components",
        "holistic_understanding"
      ],
      "optional": [],
      "description": "A deductive system that responds to an issue.",
      "fields": {
        "axioms": {"type": "array", "items": {"type": "object", "required": ["statement", "justification"], "properties": {"statement": {"type": "string"}, "justification": {"type": "string"}}}},
        "argument_chain": {"type": "array", "items": {"type": "string"}, "description": "Ordered reasoning steps."},
        "core_predictions": {"type": "array", "items": {"type": "object", "required": ["claim", "test"], "properties": {"claim": {"type": "string"}, "test": {"type": "string"}}}},
        "scope_and_applicability": {"type": "string"},
        "limitations": {"type": "string"},
        "historical_development": {"type": "string"},
        "extracted_components": {"type": "object", "required": ["entities", "mechanisms"], "properties": {"entities": {"type": "array", "items": {"type": "string"}}, "mechanisms": {"type": "array", "items": {"type": "string"}}}},
        "holistic_understanding": {"type": "string"}
      }
    },
    "Entity": {
      "required": [
        "definition",
        "classification",
        "properties",
        "distinguishing_features",
        "examples",
        "counter_examples",
        "holistic_understanding"
      ],
      "optional": ["is_a", "has_parts", "related_to"],
      "description": "Static concept describable without time.",
      "fields": {
        "definition": {"type": "string", "description": "Genus-differentia definition."},
        "classification": {"type": "string"},
        "properties": {"type": "array", "items": {"type": "object", "required": ["name", "value"], "properties": {"name": {"type": "string"}, "value": {"type": "string"}, "measurement": {"type": "string"}}}},
        "distinguishing_features": {"type": "string"},
        "examples": {"type": "array", "items": {"type": "string"}},
        "counter_examples": {"type": "array", "items": {"type": "string"}},
        "holistic_understanding": {"type": "string"},
        "is_a": {"type": "string"},
        "has_parts": {"type": "array", "items": {"type": "string"}},
        "related_to": {"type": "array", "items": {"type": "string"}}
      }
    },
    "Mechanism": {
      "required": [
        "definition",
        "trigger_conditions",
        "causal_chain",
        "termination_conditions",
        "inputs",
        "outputs",
        "process_description",
        "examples",
        "holistic_understanding"
      ],
      "optional": ["operates_on", "produces", "requires", "inhibited_by"],
      "description": "Dynamic process that maps inputs to outputs.",
      "fields": {
        "definition": {"type": "string"},
        "trigger_conditions": {"type": "string"},
        "causal_chain": {"type": "array", "items": {"type": "object", "required": ["step", "effect"], "properties": {"step": {"type": "string"}, "effect": {"type": "string"}}}},
        "termination_conditions": {"type": "string"},
        "inputs": {"type": "array", "items": {"type": "string"}},
        "outputs": {"type": "array", "items": {"type": "string"}},
        "process_description": {"type": "string"},
        "examples": {"type": "array", "items": {"type": "string"}},
        "holistic_understanding": {"type": "string"},
        "operates_on": {"type": "array", "items": {"type": "string"}},
        "produces": {"type": "array", "items": {"type": "string"}},
        "requires": {"type": "array", "items": {"type": "string"}},
        "inhibited_by": {"type": "array", "items": {"type": "string"}}
      }
    }
  }
}
